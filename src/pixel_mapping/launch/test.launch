<launch>
    <arg 
        name="model"
        default="$(find pixel_mapping)/urdf/train.urdf"
    />
    
    <node 
        name="robot_state_publisher"
        pkg="robot_state_publisher"
        type="robot_state_publisher">
        <param name="use_tf_static" value="false"/>
    </node>

    <param 
        name="robot_description"
        command="cat $(arg model)"
    />

    <node 
        type="rviz"
        name="rviz"
        pkg="rviz"
        args="-d $(find pixel_mapping)/rviz/urdf.rviz"
        required="true" 
    />


</launch>